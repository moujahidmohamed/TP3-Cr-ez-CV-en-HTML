    <script>
        // Fonction pour basculer entre les modes
        function toggleTheme() {
            const body = document.body;
            const themeIcon = document.getElementById('theme-icon');
            const themeText = document.getElementById('theme-text');
            
            if (body.classList.contains('light-mode')) {
                // Passer en mode sombre
                body.classList.remove('light-mode');
                body.classList.add('dark-mode');
                themeIcon.textContent = '‚òÄÔ∏è';
                themeText.textContent = 'Mode Clair';
            } else {
                // Passer en mode clair
                body.classList.remove('dark-mode');
                body.classList.add('light-mode');
                themeIcon.textContent = 'üåô';
                themeText.textContent = 'Mode Sombre';
            }
        }

        // Script pour g√©rer le t√©l√©chargement de photo
        document.addEventListener('DOMContentLoaded', function() {
            const profilePhoto = document.querySelector('.profile-photo');
            const photoPlaceholder = document.querySelector('.photo-placeholder');
            
            profilePhoto.addEventListener('click', function() {
                // Cr√©er un input file cach√©
                const fileInput = document.createElement('input');
                fileInput.type = 'file';
                fileInput.accept = 'image/*';
                
                fileInput.onchange = function(e) {
                    const file = e.target.files[0];
                    if (file) {
                        const reader = new FileReader();
                        reader.onload = function(event) {
                            // Cr√©er l'image
                            const img = document.createElement('img');
                            img.src = event.target.result;
                            img.alt = 'Photo de profil';
                            
                            // Vider le placeholder et ajouter l'image
                            profilePhoto.innerHTML = '';
                            profilePhoto.appendChild(img);
                        }
                        reader.readAsDataURL(file);
                    }
                }
                
                fileInput.click();
            });
            
            // Message pour la photo
            photoPlaceholder.innerHTML = 'üì∑<br>Cliquez pour<br>ajouter une photo<br>180x180px';
        });
    </script>
